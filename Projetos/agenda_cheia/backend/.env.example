# backend/.env.example
# Copie este arquivo para .env e preencha com seus valores reais

# ============================================================================
# APPLICATION
# ============================================================================

APP_NAME=Agenda Cheia - Backend
APP_VERSION=1.0.0
DEBUG=False
ENVIRONMENT=development  # development, staging, production

# ============================================================================
# DATABASE
# ============================================================================

# PostgreSQL
DATABASE_URL=postgresql://agenda_user:agenda_pass@localhost:5432/agenda_cheia

# ============================================================================
# LLM (Gemini)
# ============================================================================

GEMINI_API_KEY=sk-your-gemini-api-key-here
LLM_MODEL=gemini-1.5-flash  # ou gemini-1.5-pro

# ============================================================================
# REDIS
# ============================================================================

REDIS_URL=redis://localhost:6379
EVENT_BUS_TYPE=redis  # redis ou memory (memory apenas para dev)

# ============================================================================
# NOTIFICATIONS
# ============================================================================

NOTIFICATION_PROVIDER=n8n  # n8n, twilio, ou mock

# N8N (recomendado para MVP)
N8N_BASE_URL=https://n8n.seu-dominio.com
N8N_WEBHOOK_TOKEN=your-webhook-token

# Twilio (alternativa)
TWILIO_ACCOUNT_SID=AC...
TWILIO_AUTH_TOKEN=...
TWILIO_WHATSAPP_PHONE=+5511999999999
TWILIO_SMS_PHONE=+5511999999999

# SendGrid (para email)
SENDGRID_API_KEY=SG...
SENDGRID_FROM_EMAIL=noreply@agenda-cheia.com

# ============================================================================
# FRONTEND
# ============================================================================

FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# ============================================================================
# AUTHENTICATION
# ============================================================================

SECRET_KEY=change-this-in-production
ALGORITHM=HS256
TOKEN_EXPIRATION_HOURS=24

# ============================================================================
# LOGGING
# ============================================================================

LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_FORMAT=json  # json ou text

# ============================================================================
# CELERY
# ============================================================================

CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# ============================================================================
# AUTOMATION SCHEDULES
# ============================================================================

# Prazo Certo: executar todos os dias às 09:00
PRAZO_CERTO_SCHEDULE_HOUR=9
PRAZO_CERTO_SCHEDULE_MINUTE=0

# Encher Agenda: executar seg/qua/sex às 14:00
ENCHER_AGENDA_SCHEDULE_DAYS=[0, 2, 4]
ENCHER_AGENDA_SCHEDULE_HOUR=14
ENCHER_AGENDA_SCHEDULE_MINUTE=0
