{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://eximia.ai/schemas/spec_tecnica_v2.json",
    "title": "Spec Técnica do Agente",
    "description": "Template gerado pelo Z1 Architect para especificar um novo agente",
    "type": "object",
    "required": [
        "meta",
        "dominio",
        "competencias",
        "scope",
        "kpis"
    ],
    "properties": {
        "meta": {
            "type": "object",
            "required": [
                "nome_agente",
                "versao",
                "autor",
                "timestamp"
            ],
            "properties": {
                "nome_agente": {
                    "type": "string",
                    "description": "Nome do agente a ser criado"
                },
                "versao": {
                    "type": "string",
                    "pattern": "^\\d+\\.\\d+\\.\\d+$",
                    "description": "Versão semântica (vX.Y.Z)"
                },
                "autor": {
                    "type": "string",
                    "const": "Z1 Architect"
                },
                "timestamp": {
                    "type": "string",
                    "format": "date-time"
                }
            }
        },
        "dominio": {
            "type": "object",
            "required": [
                "primario"
            ],
            "properties": {
                "primario": {
                    "type": "string",
                    "description": "Domínio técnico principal"
                },
                "secundarios": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "Domínios adjacentes"
                }
            }
        },
        "competencias": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "required": [
                    "skill",
                    "nivel"
                ],
                "properties": {
                    "skill": {
                        "type": "string"
                    },
                    "nivel": {
                        "type": "string",
                        "enum": [
                            "Beginner",
                            "Intermediate",
                            "Advanced",
                            "Expert"
                        ]
                    },
                    "ferramentas": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "validacao": {
                        "type": "string"
                    },
                    "dependencias": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "scope": {
            "type": "object",
            "required": [
                "in_scope",
                "out_of_scope"
            ],
            "properties": {
                "in_scope": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "O que o agente FAZ"
                },
                "out_of_scope": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "O que o agente NÃO FAZ"
                },
                "stakeholders": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "Quem usa o agente"
                }
            }
        },
        "kpis": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "required": [
                    "metrica",
                    "target"
                ],
                "properties": {
                    "metrica": {
                        "type": "string"
                    },
                    "target": {
                        "type": "string"
                    }
                }
            }
        },
        "clones_sugeridos": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "Clones mentores sugeridos para o Z2 Profiler"
        },
        "notas": {
            "type": "string",
            "description": "Observações adicionais"
        }
    }
}