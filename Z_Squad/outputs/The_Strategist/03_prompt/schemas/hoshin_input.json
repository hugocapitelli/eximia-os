{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Hoshin Strategic Input",
    "type": "object",
    "properties": {
        "vision_statement": {
            "type": "string",
            "description": "The high-level aspiration (True North) for the planning period."
        },
        "time_horizon": {
            "type": "string",
            "enum": [
                "1 Year",
                "3 Years",
                "5 Years"
            ],
            "default": "1 Year"
        },
        "current_context": {
            "type": "object",
            "properties": {
                "strengths": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "weaknesses": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "opportunities": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "threats": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "departments": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "List of departments involved in the deployment."
        }
    },
    "required": [
        "vision_statement"
    ]
}