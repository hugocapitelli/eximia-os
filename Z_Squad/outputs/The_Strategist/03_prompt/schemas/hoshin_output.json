{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Hoshin Plan Output",
    "type": "object",
    "properties": {
        "hoshin_plan": {
            "type": "object",
            "properties": {
                "meta": {
                    "type": "object",
                    "properties": {
                        "generated_at": {
                            "type": "string",
                            "format": "date-time"
                        },
                        "version": {
                            "type": "string"
                        },
                        "author": {
                            "type": "string",
                            "const": "StratOS AI"
                        }
                    }
                },
                "vision": {
                    "type": "string"
                },
                "objectives": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "id": {
                                "type": "string"
                            },
                            "title": {
                                "type": "string",
                                "description": "The Annual Objective (West)"
                            },
                            "category": {
                                "type": "string",
                                "enum": [
                                    "Financial",
                                    "Customer",
                                    "Process",
                                    "Learning"
                                ]
                            },
                            "owner": {
                                "type": "string"
                            },
                            "strategies": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "description": {
                                            "type": "string",
                                            "description": "The 'Must-Win Battle'"
                                        },
                                        "tactics": {
                                            "type": "array",
                                            "items": {
                                                "type": "object",
                                                "properties": {
                                                    "action": {
                                                        "type": "string",
                                                        "description": "Verb-led action"
                                                    },
                                                    "deadline": {
                                                        "type": "string",
                                                        "pattern": "^\\d{4}-\\d{2}$"
                                                    },
                                                    "primary_kpi": {
                                                        "type": "string"
                                                    },
                                                    "status": {
                                                        "type": "string",
                                                        "enum": [
                                                            "Planned",
                                                            "In Progress",
                                                            "Done"
                                                        ]
                                                    }
                                                },
                                                "required": [
                                                    "action",
                                                    "deadline",
                                                    "primary_kpi"
                                                ]
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}