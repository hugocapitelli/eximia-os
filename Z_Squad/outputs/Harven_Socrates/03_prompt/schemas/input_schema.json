{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://harven.ai/schemas/socrates_input.json",
    "title": "Harven Socrates Input Schema",
    "description": "Schema de entrada para o agente SocratOS processar uma mensagem de dialogo socratico",
    "type": "object",
    "required": [
        "session_context",
        "student_message"
    ],
    "properties": {
        "session_context": {
            "type": "object",
            "description": "Contexto da sessao de dialogo socratico",
            "required": [
                "session_id",
                "chapter_id",
                "initial_question",
                "interactions_remaining"
            ],
            "properties": {
                "session_id": {
                    "type": "string",
                    "description": "Identificador unico da sessao"
                },
                "chapter_id": {
                    "type": "string",
                    "description": "Identificador do capitulo sendo estudado"
                },
                "chapter_title": {
                    "type": "string",
                    "description": "Titulo do capitulo"
                },
                "chapter_content": {
                    "type": "string",
                    "description": "Conteudo completo do capitulo (texto, pode incluir HTML)"
                },
                "initial_question": {
                    "type": "object",
                    "description": "A pergunta socratica que iniciou a sessao",
                    "required": ["text"],
                    "properties": {
                        "text": {
                            "type": "string",
                            "description": "Texto da pergunta"
                        },
                        "skill": {
                            "type": "string",
                            "enum": ["analise", "sintese", "aplicacao", "reflexao"],
                            "description": "Habilidade que a pergunta trabalha"
                        },
                        "intention": {
                            "type": "string",
                            "description": "Intencao pedagogica da pergunta"
                        },
                        "expected_depth": {
                            "type": "string",
                            "description": "O que uma boa resposta tenderia a incluir"
                        }
                    }
                },
                "interactions_remaining": {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 3,
                    "description": "Numero de interacoes restantes na sessao"
                },
                "learning_objective": {
                    "type": "string",
                    "description": "Objetivo de aprendizagem do capitulo (opcional)"
                }
            }
        },
        "conversation_history": {
            "type": "array",
            "description": "Historico de mensagens anteriores na sessao",
            "items": {
                "type": "object",
                "required": ["role", "content", "timestamp"],
                "properties": {
                    "role": {
                        "type": "string",
                        "enum": ["student", "assistant"],
                        "description": "Quem enviou a mensagem"
                    },
                    "content": {
                        "type": "string",
                        "description": "Conteudo da mensagem"
                    },
                    "timestamp": {
                        "type": "string",
                        "format": "date-time",
                        "description": "Quando a mensagem foi enviada"
                    }
                }
            }
        },
        "student_message": {
            "type": "object",
            "description": "A mensagem atual do aluno",
            "required": ["content"],
            "properties": {
                "content": {
                    "type": "string",
                    "description": "Texto da mensagem do aluno"
                },
                "timestamp": {
                    "type": "string",
                    "format": "date-time"
                },
                "ai_detection": {
                    "type": "object",
                    "description": "Resultado da deteccao de uso de IA (preenchido pelo sistema)",
                    "properties": {
                        "probability": {
                            "type": "number",
                            "minimum": 0,
                            "maximum": 1,
                            "description": "Probabilidade de texto gerado por IA"
                        },
                        "flags": {
                            "type": "array",
                            "items": {"type": "string"},
                            "description": "Flags de alerta"
                        }
                    }
                }
            }
        },
        "metadata": {
            "type": "object",
            "description": "Metadados opcionais",
            "properties": {
                "student_id": {
                    "type": "string"
                },
                "course_id": {
                    "type": "string"
                },
                "discipline_id": {
                    "type": "string"
                }
            }
        }
    }
}
