{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Performance Growth Output",
    "type": "object",
    "properties": {
        "performance_plan": {
            "type": "object",
            "properties": {
                "strategy_type": {
                    "type": "string",
                    "enum": [
                        "SCALE",
                        "TEST",
                        "RETRENCH"
                    ]
                },
                "campaign_structure": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "objective": {
                            "type": "string"
                        },
                        "budget_strategy": {
                            "type": "string"
                        },
                        "ad_sets": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                },
                "kill_switch_criteria": {
                    "type": "string"
                },
                "expected_roas": {
                    "type": "number"
                }
            },
            "required": [
                "strategy_type",
                "campaign_structure"
            ]
        }
    },
    "required": [
        "performance_plan"
    ]
}