{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Copywriting Input",
    "type": "object",
    "properties": {
        "product_service": {
            "type": "string"
        },
        "goal": {
            "type": "string"
        },
        "target_audience_awareness": {
            "type": "string",
