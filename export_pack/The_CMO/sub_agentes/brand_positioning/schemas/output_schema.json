{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Brand Positioning Output",
    "type": "object",
    "properties": {
        "brand_guidelines": {
            "type": "object",
            "properties": {
                "status": {
                    "type": "string",
                    "enum": [
                        "APPROVED",
                        "REJECTED"
                    ]
                },
                "archetype_check": {
                    "type": "string"
                },
                "narrative_correction": {
                    "type": "string"
                },
                "tone_enforcement": {
                    "type": "string"
                },
                "forbidden_terms_found": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "required": [
                "status",
                "archetype_check"
            ]
        }
    },
    "required": [
        "brand_guidelines"
    ]
}