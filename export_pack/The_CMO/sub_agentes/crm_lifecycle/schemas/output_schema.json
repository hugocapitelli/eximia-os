{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "CRM Lifecycle Output",
    "type": "object",
    "properties": {
        "crm_workflow": {
            "type": "object",
            "properties": {
                "segment_target": {
                    "type": "string"
                },
                "trigger_condition": {
                    "type": "string"
                },
                "workflow_steps": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "channel": {
                                "type": "string"
                            },
                            "delay": {
                                "type": "string"
                            },
                            "content_objective": {
                                "type": "string"
                            }
                        }
                    }
                },
                "exit_condition": {
                    "type": "string"
                }
            },
            "required": [
                "segment_target",
                "workflow_steps"
            ]
        }
    },
    "required": [
        "crm_workflow"
    ]
}