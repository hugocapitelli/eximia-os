{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://thiagomanzi.ai/schemas/cfo/output/v4.0",
  "title": "CFO Agent Output Schema",
  "description": "Schema de validação para outputs do CFO Agent v4.0",
  "type": "object",
  "required": [
    "recomendacao",
    "reasoning",
    "valuation_range",
    "invariantes_validados",
    "metadata"
  ],
  "properties": {
    "recomendacao": {
      "type": "string",
      "enum": ["GO", "NO-GO", "GO-CONDITIONAL"],
      "description": "Recomendação final"
    },
    "reasoning": {
      "type": "object",
      "required": ["lente_financeira", "lente_probabilistica", "lente_estrategica", "decisao_integrada"],
      "properties": {
        "lente_financeira": {
          "type": "object",
          "properties": {
            "fair_value_DCF": {
              "type": "number",
              "description": "Fair value via DCF (R$ milhões)"
            },
            "fair_value_multiplos": {
              "type": "number",
              "description": "Fair value via múltiplos (R$ milhões)"
            },
            "pain_to_benefit_ratio": {
              "type": "number",
              "minimum": 0,
              "description": "Ratio benefício/pain (target >2.5)"
            },
            "timing_ciclo": {
              "type": "string",
              "enum": ["favoravel", "neutro", "desfavoravel"],
              "description": "Timing de ciclo econômico"
            }
          }
        },
        "lente_probabilistica": {
          "type": "object",
          "properties": {
            "P_sucesso_prior": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "description": "Prior (base rate)"
            },
            "P_sucesso_posterior": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "description": "Posterior (após evidências DD)"
            },
            "expected_NPV": {
              "type": "number",
              "description": "NPV esperado (ponderado por cenários)"
            },
            "signal_vs_noise": {
              "type": "string",
              "enum": ["signal_forte", "signal_medio", "noise_dominante"],
              "description": "Qualidade dos dados"
            }
          }
        },
        "lente_estrategica": {
          "type": "object",
          "properties": {
            "effectiveness_score": {
              "type": "integer",
              "minimum": 0,
              "maximum": 10,
              "description": "É a coisa certa fazer? (0-10)"
            },
            "strategic_fit_score": {
              "type": "integer",
              "minimum": 0,
              "maximum": 50,
              "description": "Strategic fit (0-50, threshold 35)"
            },
            "alinha_com_MBO": {
              "type": "boolean",
              "description": "Alinha com objetivos estratégicos?"
            }
          }
        },
        "decisao_integrada": {
          "type": "string",
          "description": "Explicação da decisão integrando as 3 lentes"
        }
      }
    },
    "valuation_range": {
      "type": "object",
      "description": "Range de valuation (se aplicável)",
      "properties": {
        "P25": {
          "type": "number",
          "description": "Percentil 25 (Bear case)"
        },
        "Median": {
          "type": "number",
          "description": "Mediana (Base case)"
        },
        "P75": {
          "type": "number",
          "description": "Percentil 75 (Bull case)"
        },
        "walk_away_price": {
          "type": "number",
          "description": "Preço máximo aceitável"
        }
      }
    },
    "invariantes_validados": {
      "type": "object",
      "required": ["total_invariantes", "violacoes"],
      "properties": {
        "total_invariantes": {
          "type": "integer",
          "minimum": 22,
          "description": "Total de invariantes testados"
        },
        "violacoes": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["invariante_id", "severidade", "descricao"],
            "properties": {
              "invariante_id": {
                "type": "string",
                "pattern": "^INV-[0-9]{3}$",
                "description": "ID do invariante (ex: INV-001)"
              },
              "severidade": {
                "type": "string",
                "enum": ["CRITICAL", "HIGH", "MEDIUM", "LOW"],
                "description": "Severidade da violação"
              },
              "descricao": {
                "type": "string",
                "description": "Descrição da violação"
              },
              "action_taken": {
                "type": "string",
                "enum": ["HALT", "WARNING", "LOGGED"],
                "description": "Ação tomada"
              }
            }
          },
          "description": "Lista de violações de invariantes (vazio se nenhuma)"
        }
      }
    },
    "conditions": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Condições para GO-CONDITIONAL (se aplicável)"
    },
    "metadata": {
      "type": "object",
      "required": ["timestamp", "request_id", "fase_processo"],
      "properties": {
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp da resposta"
        },
        "request_id": {
          "type": "string",
          "pattern": "^[A-Z0-9]{8}$",
          "description": "Request ID (match com input)"
        },
        "tempo_analise_minutos": {
          "type": "integer",
          "minimum": 0,
          "description": "Tempo total de análise (minutos)"
        },
        "fase_processo": {
          "type": "string",
          "enum": ["PENSAMENTO", "CONSULTA", "REFLEXAO", "PLANO", "EXECUCAO"],
          "description": "Fase META em que decisão foi tomada"
        },
        "checksum": {
          "type": "string",
          "pattern": "^[A-F0-9]{64}$",
          "description": "SHA-256 checksum do output (auditabilidade)"
        }
      }
    }
  },
  "if": {
    "properties": {
      "recomendacao": {"const": "GO-CONDITIONAL"}
    }
  },
  "then": {
    "required": ["conditions"],
    "properties": {
      "conditions": {
        "minItems": 1,
        "description": "GO-CONDITIONAL requer ≥1 condition"
      }
    }
  }
}
