{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Maestro Input Schema",
    "description": "Schema for parsing and validating user requests to The_Maestro",
    "type": "object",
    "properties": {
        "request_id": {
            "type": "string",
            "description": "Unique identifier for this request"
        },
        "timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "ISO 8601 timestamp of request"
        },
        "user_input": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string",
                    "description": "Raw user message"
                },
                "attachments": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "type": {
                                "type": "string",
                                "enum": [
                                    "document",
                                    "image",
                                    "url"
                                ]
                            },
                            "content": {
                                "type": "string"
                            },
                            "metadata": {
                                "type": "object"
                            }
                        }
                    },
                    "description": "Optional attachments"
                }
            },
            "required": [
                "message"
            ]
        },
        "context": {
            "type": "object",
            "properties": {
                "session_id": {
                    "type": "string",
                    "description": "Current session identifier"
                },
                "previous_turns": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "role": {
                                "type": "string",
                                "enum": [
                                    "user",
                                    "assistant"
                                ]
                            },
                            "content": {
                                "type": "string"
                            }
                        }
                    },
                    "description": "Previous conversation turns"
                },
                "project_id": {
                    "type": "string",
                    "description": "Optional project context"
                }
            }
        },
        "preferences": {
            "type": "object",
            "properties": {
                "language": {
                    "type": "string",
                    "default": "pt-BR",
                    "description": "Preferred response language"
                },
                "verbosity": {
                    "type": "string",
                    "enum": [
                        "concise",
                        "standard",
                        "detailed"
                    ],
                    "default": "standard"
                },
                "format": {
                    "type": "string",
                    "enum": [
                        "markdown",
                        "plain",
                        "structured"
                    ],
                    "default": "markdown"
                }
            }
        }
    },
    "required": [
        "user_input"
    ]
}